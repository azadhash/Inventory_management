<% flash.each do |key, value| %>
  <div class="alert alert-danger"><%= value %></div>
<% end %>

<h1>Login</h1>

<%= form_with url:login_path do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.text_area :email %><br>
  </div>
  <div>
    <%= form.submit 'Login' %>
  </div>
<% end %>


<%= button_to "Google", '/auth/google_oauth2', data: { "turbo": false } %>

