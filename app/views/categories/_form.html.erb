<%= form_with model: category do |form| %>
  <div class="mx-auto col-md-6">
    <div> 
      <%= form.label :name, class: 'form-label required' %>
      <%= form.text_field :name, class: 'form-control' %>
      <p class='text-danger'><%= show_errors(@category, :name) %></p>
    </div>
    <div>
      <%= form.label :required_quantity, class: 'form-label required' %>
      <%= form.text_field :required_quantity , class: 'form-control'%>
      <p class='text-danger'><%= show_errors(@category, :required_quantity) %></p> 
    </div>
    <div>
      <%= form.label :buffer_quantity, class: 'form-label required' %>
      <%= form.text_field :buffer_quantity, class: 'form-control' %>
      <p class='text-danger'><%= show_errors(@category, :buffer_quantity) %></p> 
    </div>
    <div>
      <%= form.label :priority, class: 'form-label required' %>
      <%= form.select :priority, options_for_select(Category.priorities.keys, category.priority), { prompt: 'Select priority' }, { class: 'form-select mb-3' } %>
      <p class='text-danger'><%= show_errors(@category, :priority) %></p> 
    </div>
    <div class="d-flex justify-content-center">
      <%= form.submit class: 'btn btn-primary mt-4 custom-bg-color' %>
    </div>
  </div>
<% end %>
