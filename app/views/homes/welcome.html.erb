<h3 class="mb-4 mt-3">Welcome back <%= current_user.name %></h3>

<% if authenticate_user %>
<div class="container mt-3 mb-4">
  <div class="row">
    <div class="col-md-6 col-lg-3">
      <div class="card bg-primary">
        <div class="card-body">
          <h5 class="card-title">Total Item</h5>
          <p class="card-text"><%= Item.count %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3 ">
      <div class="card bg-warning">
        <div class="card-body">
          <h5 class="card-title">Total User</h5>
          <p class="card-text"><%= User.count %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3">
      <div class="card bg-info">
        <div class="card-body">
          <h5 class="card-title">Toatl Issue</h5>
          <p class="card-text"><%= Issue.count %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3">
      <div class="card bg-success">
        <div class="card-body">
          <h5 class="card-title">Total Category</h5>
          <p class="card-text"><%= Category.count %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>