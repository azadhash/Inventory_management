<%= render 'partials/search', search: search_brands_path  %>
<% unless @brands.nil? %>
  <% if @brands.empty? %>
    <h3 class="text-center mt-4">No brand found</h3>
  <% else %>
    <h2>Search results</h2>
    <div class="col-lg-3 w-50 m-auto">
    <table class="table table-bordered table-striped">
      <%= render 'partials/brands', sort: search_brands_path %>
      <tbody>
        <%@brands.each do |brand| %>
          <%= render 'list', brand: brand %>
        <%end%>
      </tbody>
    </table>
    </div>
  <% end %>
<% end %>
