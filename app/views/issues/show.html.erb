<%= link_to 'Back', request.referer || root_path, class: 'btn btn-sm add-btn' %>
<h5 class="p-3 text-center">Issue Details</h5>
<div class="col-lg-5 mt-4 m-auto w-30">
  <div class="card mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Complaint Id</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @issue.id %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Item Id</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @issue.item.uid %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Description</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @issue.description %></p>
        </div>
      </div> 
      <hr> 
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Status</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @issue.status ? 'Resolved' : 'Pending' %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Employee</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @issue.user.present? ? @issue.user&.email : '-----' %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="d-flex justify-content-center">
          <% if authenticate_user %>
            <div>
              <%= form_for(@issue, url: issue_path(@issue), method: :put) do |form| %>
                <% if !@issue.status %>
                  <%= form.hidden_field :status, value: true %>
                  <%= form.submit 'Mark as Resolved', class: 'btn btn-sm btn-info', data: { confirm: 'Are you sure you want to mark this issue as resolved?' } %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>