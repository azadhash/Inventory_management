<%= form_with model: issue do |form| %>
  <div class="mx-auto col-4">
    <div class="form-group mb-2">
      <%= form.label :item_id, class: 'form-label required' %>
      <%= form.select :item_id, options_for_select(current_user.items.all.map { |item| [item.name, item.id] }), { prompt: 'Select item' }, { class: 'form-select mb-3' } %>
      <p class='text-danger'><%= show_errors(@issue, :item_id) %></p>
    </div>
    <div class="form-group mb-2">
      <%= form.label :description, class: 'form-label required' %>
      <%= form.text_area :description, class: 'form-control', rows: 6 %>
      <p class='text-danger'><%= show_errors(@issue, :description) %></p>
    </div>
    <div>
      <%= form.submit "Raise Issue", class: 'btn custom-bg-color text-light mt-3'%>
    </div>
  </div>
<% end %>
