<%= form_with model: issue do |form| %>
  <div class="mx-auto col-4">
  <div>
    <%= form.label :item_id, class: 'form-label required' %><br>
    <%= form.select :item_id, options_for_select(current_user.items.all.map { |item| [item.name, item.id] }), { prompt: 'Select item' }, { class: 'form-select mb-3' } %>
  </div>
  <div>
    <%= form.label :description, class: 'form-label required' %><br>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div>
    <% if authenticate_user %>
      <%= form.label :status, class: 'form-label' %><br>
      <%= form.select(:status, options_for_select([['solved', true],['Pending', false]]),{},class: 'form-select') %>
    <% end %>
  </div>
  <div>
    <%= form.submit "Raise Issue", class: 'btn custom-bg-color text-light mt-3'%>
  </div>
  </div>
<% end %>
