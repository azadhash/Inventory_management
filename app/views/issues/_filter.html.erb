<div class="text-center">
  <%= form_tag(search_issues_path, method: "get", class: "form-inline d-inline-block") do %>
    <div class="d-flex align-items-center">
      <div class="form-group mr-2">
        <%= label_tag :status, "Status:", class: "mr-2" %>
        <%= select_tag :status, options_for_select([ ["All",""],["Resolved", "true"], ["Pending", "false"]], params[:status]), class: "form-control" %>
      </div>
      <%= hidden_field_tag :filter, true %>
      <%= submit_tag "Filter", class: "btn btn-primary mt-4" %>
    </div>
  <% end %>
</div>