<%= render 'partials/search', search: search_issues_path  %>
<div class="d-flex justify-content-center gap-3">
  <%= render 'filter' %>
  <% if check_session %>
    <%= form_tag(search_issues_path, method: "get", class: "clear-filter-form") do %>
      <div class="d-flex mt-3 mb-3">
        <div class="align-self-end mt-4">
          <div class="form-group">
            <%= submit_tag "Clear Filter", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
      <%= hidden_field_tag :status, '' %>
      <%= hidden_field_tag :filter, true %>
    <% end %>
  <% end %>
</div>
<% unless @issues.nil? %>
  <% if @issues.empty? %>
    <h3 class="text-center mt-4">No Issue Found</h3>
  <% else %>
    <h2>Search results</h2>
    <%= render 'list', issues: @issues, sort: search_issues_path %>
  <% end %>
<% end %>
<%= render 'partials/paginate', obj: @issues%>
