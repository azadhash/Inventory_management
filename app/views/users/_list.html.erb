<div class="table-responsive">  
  <table class="table table-bordered table-striped">
    <thead>
      <tr class="text-center">
        <%= render 'partials/sort', sort: search %>
        <th scope="col">Email</th>
        <th scope="col">Active</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody class="entities-list">
    <% users.each do |user| %>
      <tr class="text-center" data-users-id=<%= user.id %>>
        <td><%= link_to "#{user.name}", user_path(user), class: 'btn text-primary' %></td>
        <td><%= user.email %></td>
        <td><%= user.active ? 'Yes' : 'No' %></td>
        <td class="d-flex gap-2 justify-content-center">
          <%= edit_link(edit_user_path(user)) %>
          <%= delete_link(user_path(user)) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>