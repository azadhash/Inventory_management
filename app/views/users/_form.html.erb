<%= form_with model: user do |form| %>
<div class="mx-auto col-4">
  <div>
    <%= form.label :name, class: 'form-label required' %>
    <%= form.text_field :name, class: 'form-control' %>
    <p class='text-danger'><%= show_errors(@user, :name) %></p>
  </div>
  <div>
    <%= form.label :email, class: 'form-label mt-2 required' %>
    <%= form.text_field :email, class: 'form-control' %>
    <p class='text-danger'><%= show_errors(@user, :email) %></p>
  </div>
  <div>
    <%= form.label :active, class: 'form-label required' %>
   <%= form.select(:active, options_for_select([['Yes', true],['No', false]], user.active),{},class: 'form-select') %>
  </div>
   <div>
    <%= form.label :admin,'User Type' ,class: 'form-label mt-3 required' %>
    <%= form.select(:admin, options_for_select([['Admin', true],['Employee', false]], user.admin),{},class: 'form-select' )%>
  </div>

  <div class="d-flex justify-content-center">
    <%= form.submit class: 'btn add-btn mt-4' %>
  </div>
</div>
<% end %>
