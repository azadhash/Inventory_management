<%= form_with model: user do |form| %>
<div class="mx-auto col-4">
  <div>
    <%= form.label :name, class: 'form-label required' %>
    <%= form.text_field :name, class: 'form-control' %>
    <p class='text-danger'><%= show_errors(@user, :name) %></p>
  </div>
  <div>
    <%= form.label :email, class: 'form-label mt-2 required' %>
    <%= form.text_field :email, class: 'form-control' %>
    <p class='text-danger'><%= show_errors(@user, :email) %></p>
  </div>
  <div>
    <%= form.label :status, class: 'form-label required' %>
   <%= form.select(:status, options_for_select([['Active', true],['Inactive', false]], user.status),{},class: 'form-select') %>
  </div>
   <div>
    <%= form.label :admin, class: 'form-label mt-3 required' %>
    <%= form.select(:admin, options_for_select([['Admin', true],['Employee', false]], user.admin),{},class: 'form-select' )%>
  </div>

  <div class="d-flex justify-content-center">
    <%= form.submit class: 'btn custom-bg-color text-light mt-5' %>
  </div>
</div>
<% end %>
