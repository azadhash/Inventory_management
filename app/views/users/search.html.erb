<div class="container mt-4 mb-4 d-flex justify-content-center align-items-center">
  <%= render 'partials/search', search: search_users_path %>
  <%= render 'filter', filter: search_users_path %>
  <% if check_session %>
    <%= form_tag(search_users_path, method: "get", class: "clear-filter-form mt-2") do %>
      <div class="form-group">
        <%= submit_tag "Clear Filter", class: "btn btn-sm add-btn" %>
      </div>
      <%= hidden_field_tag :query, '' %>
      <%= hidden_field_tag :active, '' %>
      <%= hidden_field_tag :filter, true %>
    <% end %>
  <% end %>
</div>
<% unless @users.nil? %>
  <% if @users.empty? %>
    <p class="text-center mt-4">No results found</p>
  <% else %>
    <span>Search results</span><hr/>
    <%= render 'list', users: @users, search: search_users_path %>
  <% end %>
<% end %>
<%= render 'partials/paginate', obj: @users %>