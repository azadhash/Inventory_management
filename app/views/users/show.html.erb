<%= link_to 'Back', users_path, class: 'btn btn-sm add-btn' %>
<h5 class="p-3 text-center">User Details</h5>
<div class="col-lg-4 mt-4 m-auto w-30">
  <div class="card mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Name</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @user.name %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Email</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @user.email %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Active</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @user.active ? "Yes" : "No" %></p>
        </div>
      </div> 
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Role</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @user.admin ? "Admin" : "Employee  " %></p>
        </div>
      </div> 
      <hr>
      <div class="row">
        <div class="col-md-4 m-auto">
          <%= edit_link (edit_user_path(@user)) %>
          <%= delete_link (user_path(@user)) %>
        </div>
      </div>   
    </div>
  </div>
</div>
<% if @user.items.present? %>
  <h5 class="text-center mb-3">Allocated items</h5>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr class="text-center">
          <%= render 'partials/user_items',sort: user_path(@user) %>
        </tr>
      </thead>
      <tbody class="entities-list">
        <% @items.each do |item| %>
          <%= render 'items/list', item: item %>
        <% end %>
      </tbody>
    </table>  
  </div>
  <%= render 'partials/paginate', obj: @items %>
<% else %>
  <h5 class="text-center mb-3">No items are allocated</h5>
<% end %>  