<div class="col-lg-4 mt-4 m-auto w-30">
<div class="card mb-4">
  <div class="card-body">
    <div class="row">
      <div class="col-sm-3">
        <p class="mb-0">Name</p>
      </div>
      <div class="col-sm-9">
        <p class="text-muted mb-0"><%= @user.name %></p>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-3">
        <p class="mb-0">Email</p>
      </div>
      <div class="col-sm-9">
        <p class="text-muted mb-0"><%= @user.email %></p>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-3">
        <p class="mb-0">Active</p>
      </div>
      <div class="col-sm-9">
        <p class="text-muted mb-0"><%= @user.active ? "Yes" : "No" %></p>
      </div>
    </div>   
  </div>
  </div>
</div>
<h4 class="text-center mb-3">Allocated items</h4>

<table class="table table-bordered">
  <%= render 'partials/items',sort: user_path(@user)%>
  <tbody>
    <%@items.each do |item| %>
      <%= render 'items/list', item: item %>
    <%end%>
  </tbody>
</table>