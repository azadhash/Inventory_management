<%= form_with model: item do |form| %>
  <div class="mx-auto col-4">
    <div>
      <%= form.label :name, class: 'form-label'%><br>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div>
      <%= form.label :brand_id, class: 'form-label' %><br>
      <%= form.select :brand_id, options_for_select(Brand.all.map { |brand| [brand.name, brand.id] }), { prompt: 'Select brand' }, { class: 'form-select' } %>
    </div>
    <div>
      <%= form.label :category_id, class: 'form-label' %><br>
      <%= form.select :category_id, options_for_select(Category.all.map { |category| [category.name, category.id] }), { prompt: 'Select category' }, { class: 'form-select' } %>

    </div>
    <div>
      <%= form.label :user_id, class: 'form-label' %><br>
      <%= form.text_field :user_id, class: 'form-control'  %>
    </div>
    <div>
      <%= form.label :notes, class: 'form-label' %><br>
      <%= form.text_field :notes, class: 'form-control'  %>
    </div>
    <div>
      <%= form.label :status, class: 'form-label' %><br>
      <%= form.select(:status, options_for_select([['working', true],['not working', false]]),{},class: 'form-select') %>
    </div>
    <div class="field mt-4">
      <%= form.label :documents %>
      <%= form.file_field :documents, multiple: true %>
    </div>
    <div class="d-flex justify-content-center">
      <%= form.submit class: 'btn btn-primary mt-5' %>
    </div>
  </div>
<% end %>
