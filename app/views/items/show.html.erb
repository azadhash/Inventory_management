<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card mb-4">
        <div class="card-header">
          <h3 class="card-title"><%= @item.name %></h3>
        </div>
        <div class="card-body">
          <p class="card-text">
            <strong>ID:</strong> <%= @item.uid %><br>
            <strong>Brand:</strong> <%= @item.brand.name %><br>
            <strong>Category:</strong> <%= @item.category.name %><br>
            <strong>Notes:</strong> <%= @item.notes %><br>
            <strong>Status:</strong> <%= @item.status ? 'Working' : 'Not Working' %><br>
            <strong>User Email:</strong> <%= @item.user&.email %><br>
          </p>
          <% if @item.documents.attached? %>
            <div class="mt-4">
              <strong>Download Documents:</strong><br>
              <% @item.documents.each do |document| %>
                <%= link_to document.filename, url_for(document), class: 'btn btn-primary btn-sm', target: '_blank' %><br>
              <% end %>
            </div>
          <% end %>
          <div class="mt-4">
            <% if authenticate_user %>
            <%= link_to "Edit", edit_item_path(@item), class: 'btn btn-warning' %>
            <%= link_to "Delete", item_path(@item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            <% end %>
            <button class="btn btn-primary" onclick="goBack()">Back</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function goBack() {
    window.history.back();
  }
</script>